<%- include header %>
    <div class="container">
    	<div class="row hero-unit">
    		<div class="span4">
    			<h1><%=title%></h1>
    			<p><%=name%></p>
    			<div class="span2">
    				<img src="images/my.jpg" alt="" class="img-circle">
    			</div>
    		</div>
    		
    		<div class="span3 offset3">
    			<form action="/login" method="post" id="login">
    				<fieldset>
    					<div class="row-fluid">
    						<div class="span3">登录</div>
    						<div class="span5 offset4" id="changeReg" style="cursor:pointer">切换注册</div>
    					</div>
    					<input type="text" placeholder="用户名" name="name"/>
    					<input type="password" name="password" placeholder="密码"/>
    					<button type="submit" class="btn btn-success">登陆</button>
    				</fieldset>
    			</form>
    			<form action="/reg" id="reg" method="post">
    				<fieldset>
    					<div class="row-fluid">
    						<div class="span3">注册</div>
    						<div class="span5 offset4" id="changeLogin" style="cursor:pointer">切换登录</div>
    					</div>
    					<input type="text" placeholder="用户名" name="name"/>
    					<input type="password" placeholder="密码" name="password"/>
    					<input type="password" name="repassword" placeholder="确定密码"/>
    					<button class="btn btn-primary" type="submit">注册</button>
    				</fieldset>
    			</form>
    		</div>

    	</div>
    </div>
    <script type="text/javascript">
    	$("#reg").hide();
    	$("#changeReg").click(function(event) {
    		$("#login").hide();
    		$("#reg").show();
    	});
    	$("#changeLogin").click(function(event) {
    		$("#login").show();
    		$("#reg").hide();
    	});
    </script>
<%- include footer %>